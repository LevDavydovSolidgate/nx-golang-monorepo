# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build nodejs-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nodejs-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nodejs-app && \
          adduser --system -G nodejs-app nodejs-app

COPY dist/apps/nodejs-app nodejs-app/
RUN chown -R nodejs-app:nodejs-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nodejs-app --omit=dev -f install

CMD [ "node", "nodejs-app" ]
